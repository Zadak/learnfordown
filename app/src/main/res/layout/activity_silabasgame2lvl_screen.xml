<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lettergame2lvl_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uvigo.learnfordown.learnfordown.lettergame2lvl_screen"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@color/Verde">

            <ImageButton
                android:layout_width="187dp"
                android:onClick="BackArrow"
                android:layout_height="match_parent"
                android:id="@+id/button3"
                android:src="@mipmap/icon_backarrow"
                android:background="@color/Verde"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:visibility="visible"
                android:scaleType="fitCenter" />

            <TextView
                android:text="¿POR QUÉ SÍLABA EMPIEZA?"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="60sp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:paddingTop="25dp" />
            <ImageButton
                android:src="@mipmap/ic_home"
                android:layout_width="102dp"
                android:layout_height="130dp"
                android:id="@+id/button5"
                android:onClick="goHome"
                android:layout_weight="0.03"
                android:scaleType="fitCenter"
                android:background="@color/Verde" />
            <ImageButton
                android:src="@mipmap/icon_help"
                android:layout_width="102dp"
                android:layout_height="130dp"
                android:id="@+id/button4"
                android:layout_weight="0.03"
                android:scaleType="fitCenter"
                android:background="@color/Verde" />


        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@color/Blanco"
            android:layout_weight="1.06"
            android:weightSum="1">

            <ImageView
                android:layout_width="439dp"
                android:layout_height="300dp"
                android:src="@drawable/bufanda"
                android:id="@+id/imageView2"
                android:layout_weight="0.19"
                android:layout_marginStart="89dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/textView4" />

            <TextView
                android:paddingTop="0sp"
                android:text="BU"
                android:gravity="center"
                android:background="@color/VerdeClarito"
                android:id="@+id/textView4"
                android:fontFamily="sans-serif"
                android:textSize="150sp"
                android:textColor="@color/Negro"
                android:textAlignment="center"
                android:layout_weight="0.25"
                android:layout_height="200dp"
                android:layout_width="200dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="227dp" />


        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/horizontal_recycler_view"
            android:orientation="horizontal"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_weight="0.21" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/horizontal_recycler_view2"
            android:orientation="horizontal"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="151dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:layout_marginTop="-570dp"
            android:layout_marginLeft="50dp"
            android:numStars="2"
            android:stepSize="1.0"
            android:scaleX="2"
            android:scaleY="2"
            android:rating="1"
            android:backgroundTint="@color/amarillo"
            android:progressTint="#FFFDED1B"
            android:maxHeight="@dimen/activity_horizontal_margin"
            android:minWidth="@dimen/activity_horizontal_margin" />

    </LinearLayout>

</RelativeLayout>

