<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    android:id="@+id/activity_strokes_training"
    android:weightSum="1"
    tools:context="com.uvigo.learnfordown.learnfordown.StrokesTrainingActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout

        android:weightSum="1"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_height="125dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorGame"
            android:weightSum="1">



            <TextView
                android:id="@+id/textView2"
                android:text="DEFINIR PATRÃ“N"
                android:textStyle="bold"
                android:textSize="55sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="943dp"
                android:layout_height="match_parent"
                android:layout_weight="0.86" />




        </LinearLayout>

        <RelativeLayout
            android:weightSum="1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/Blanco">


            <LinearLayout
                android:id="@+id/lienzoPatron"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/botonBorrar"
                android:layout_toStartOf="@+id/botonBorrar"></LinearLayout>

            <ImageButton
                android:id="@+id/botonAceptar"
                android:layout_height="130dp"
                android:layout_width="102dp"
                android:background="@color/Blanco"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_validate"
                android:layout_weight="0.03"
                android:onClick="procesarMuestra"
                android:layout_marginBottom="133dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:id="@+id/botonBorrar"
                android:layout_height="130dp"
                android:layout_width="102dp"
                android:background="@color/Blanco"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_papelera"
                android:layout_weight="0.03"
                android:onClick="resetCanvas"
                android:layout_marginBottom="41dp"
                android:layout_above="@+id/botonAceptar"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>






