<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lettergame1lvl_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uvigo.learnfordown.learnfordown.frasegame1lvl_screen"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/colorGame">

        <ImageButton
            android:layout_width="187dp"
            android:layout_height="match_parent"
            android:id="@+id/button5"
            android:src="@mipmap/icon_backarrow"
            android:background="@color/colorGame"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:visibility="visible"
            android:onClick="BackArrow"
            android:scaleType="fitCenter" />

        <TextView
            android:text="¡COMPLETA LA FRASE!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="60sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:paddingTop="25dp" />
        <ImageButton
            android:src="@mipmap/ic_home"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:id="@+id/button6"
            android:onClick="goHome"
            android:layout_weight="0.03"
            android:scaleType="fitCenter"
            android:background="@color/colorGame" />

        <ImageButton
            android:src="@mipmap/icon_help"
            android:layout_width="102dp"
            android:layout_height="130dp"
            android:id="@+id/button7"
            android:layout_weight="0.03"
            android:scaleType="fitCenter"
            android:background="@color/colorGame" />


    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@color/Blanco"
        android:layout_weight="0.88"
        android:weightSum="1"
        android:layout_alignParentBottom="true">


<ImageView
    android:layout_width="341dp"
    android:layout_height="215dp"
    android:layout_marginTop="130dp"
    android:layout_marginLeft="10dp"
    app:srcCompat="?android:attr/activatedBackgroundIndicator"
    android:id="@+id/foto"
    android:background="@mipmap/plato" />

<Button
    android:text="PLANO"
    android:layout_width="183dp"
    android:layout_height="82dp"
    android:layout_marginTop="450dp"
    android:layout_marginLeft="100dp"
    android:id="@+id/button1"
    android:onClick="pulsar"
    android:background="@color/common_google_signin_btn_text_dark_pressed"
    android:textSize="36sp"
    android:textAllCaps="false" />


<Button
    android:text="PLATO"
    android:layout_width="163dp"
    android:layout_height="82dp"
    android:layout_marginTop="450dp"
    android:layout_marginLeft="550dp"
    android:id="@+id/button2"
    android:onClick="pulsar"
    android:background="@color/common_google_signin_btn_text_dark_pressed"
    android:textSize="36sp" />


<Button
    android:text="PLÁTANO"
    android:layout_width="163dp"
    android:layout_height="82dp"
    android:layout_marginTop="450dp"
    android:layout_marginLeft="950dp"
    android:id="@+id/button3"
    android:onClick="pulsar"
    android:background="@color/common_google_signin_btn_text_dark_pressed"
    android:textSize="36sp" />


<TextView
    android:text="COMPRÉ UN _ _ _"
    android:layout_width="623dp"
    android:layout_height="82dp"
    android:layout_marginTop="105dp"
    android:layout_marginLeft="500dp"
    android:id="@+id/button4"
    android:background="@color/common_google_signin_btn_text_dark_pressed"
    android:textSize="50sp"
    android:textStyle="normal|bold" />

<RatingBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ratingBar"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="150dp"
    android:numStars="6"
    android:stepSize="1.0"
    android:scaleX="2"
    android:scaleY="2"
    android:rating="0"
    android:isIndicator="true"
    android:backgroundTint="@color/amarillo"
    android:progressTint="#FFFDED1B"
    android:maxHeight="@dimen/activity_horizontal_margin"
    android:minWidth="@dimen/activity_horizontal_margin" />


        <!--numStars: indica que consta de esas estrellas
        stepSize:  determina  la cantidad de aumento o disminución de tasa
        rating: estrellas seleccionadas por defecto-->


    </RelativeLayout>

</RelativeLayout>
